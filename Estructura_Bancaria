void gerente(struct clientes cliente[50])
{

}
int main()
{
        srand(time(NULL));
	for (int i=0; i<25; i++)
	{
	clientes[i].registro.nombre=(rand()%127);
	clientes[i].registro.id=1000000+rand()%(9999999999-1000000);
	clientes[i].registro.tel=1000000000+rand()%(9999999999-1000000000);
	clientes[i].registro.direccion=(rand()%127);
	clientes[i].registro.tipo=1;
	clientes[i].registro.valor=1+rand()%(15000001-1);
	clientes[i].registro.idcuenta=1000+rand()%(9999-1000);
	clientes[i].registro.contrasena=100000+rand()%(999999-100000);
	fflush(stdin);
	}
	
	for (int i=0; i<25; i++)
	{
		printf("%c \n",clientes[i].registro.nombre);
		printf("%i \n",clientes[i].registro.id);
		printf("%i \n",clientes[i].registro.tel);
		printf("%c \n",clientes[i].registro.direccion);
		printf("%i \n",clientes[i].registro.tipo);
		printf("%.2f \n",clientes[i].registro.valor);
		printf("%i \n",clientes[i].registro.idcuenta);
		printf("%i \n",clientes[i].registro.contrasena);
		fflush(stdin);
	}
	
	system("color 0b");
	crear(cliente);
	gerente(cliente);
}
